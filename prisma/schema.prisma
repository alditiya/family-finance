generator client {
  provider   = "prisma-client-js"
  //output   = "../generated/prisma-client"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  //url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  members      HouseholdMember[]
  transactions Transaction[]
}

model Household {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  members      HouseholdMember[]
  transactions Transaction[]
  monthLocks   MonthLock[]
}

model HouseholdMember {
  id          String @id @default(cuid())
  userId      String
  householdId String

  user      User      @relation(fields: [userId], references: [id])
  household Household @relation(fields: [householdId], references: [id])
}

model Transaction {
  id       String          @id @default(cuid())
  type     TransactionType
  amount   Int
  category String
  note     String?
  date     DateTime

  userId      String
  householdId String

  user      User      @relation(fields: [userId], references: [id])
  household Household @relation(fields: [householdId], references: [id])

  createdAt DateTime @default(now())
}

model MonthlyLock {
  id          String @id @default(cuid())
  householdId String
  month       Int
  year        Int
}

model MonthLock {
  id          String  @id @default(cuid())
  householdId String
  month       Int
  year        Int
  locked      Boolean @default(true)

  household Household @relation(fields: [householdId], references: [id])

  @@unique([householdId, month, year])
}

model Invite {
  id          String  @id @default(cuid())
  email       String
  householdId String
  accepted    Boolean @default(false)
}

enum TransactionType {
  INCOME
  EXPENSE
}
